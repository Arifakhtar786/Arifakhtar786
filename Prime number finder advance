#include<iostream>
using namespace std;
// check if the number is prime or not 
int main(){
    char choice;
    do{
    int n;
   cout<<"enter any number => ";
   cin>>n;
    int s=1;
    if(n==1){
    cout<<"nither prime nor not prime"<<endl;
        cout<<"do you want to run another test (y/n)"<<endl;
         cin>>choice;
        continue;
    return 0;
    }
    if(n<=0){
        cout<<"please enter only positive value"<<endl;
        cout<<"do you want to run another test (y/n)"<<endl;
         cin>>choice;
        continue;
        return 0;
    }
    for(int i=2;i*i<=n;i++){
        if(n%i==0){
            s=0;  
            break;
    }
    }
       if(s){
           cout<<" prime "<<endl;
       }else{
           cout<<"not a prime"<<endl;
       }   
    cout<<"do you want to run another test (y/n)"<<endl;
     cin>>choice;
    }while(choice == 'y' || choice == 'Y');
    if(choice == 'n' || choice =='N'){
        cout<<"♡THANK YOU♡"<<endl;
    }
        return 0;
    }
